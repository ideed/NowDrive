<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <ScrollView
        android:layout_width="413dp"
        android:layout_height="728dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/set_back_btn"
                android:layout_width="91dp"
                android:layout_height="56dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:backgroundTint="#54D1C5"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/set_email"
                android:layout_width="299dp"
                android:layout_height="48dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="71dp"
                android:layout_marginEnd="56dp"
                android:ems="10"
                android:hint="Enter new email"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/set_email_btn"
                android:layout_width="298dp"
                android:layout_height="58dp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="59dp"
                android:text="Change Email"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/set_pass_1"
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="57dp"
                android:ems="10"
                android:hint="Enter new password"
                android:inputType="textPassword"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/set_pass_2"
                android:layout_width="296dp"
                android:layout_height="59dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="59dp"
                android:ems="10"
                android:hint="Repeat new password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/set_pass_btn"
                android:layout_width="298dp"
                android:layout_height="58dp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="59dp"
                android:text="Change Password"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/ver_email"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="56dp"
                android:ems="10"
                android:hint="Enter email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/ver_pass"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="57dp"
                android:ems="10"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/ver_btn"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="59dp"
                android:backgroundTint="#EAA963"
                android:text="Verify"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/set_acc_btn"
                android:layout_width="298dp"
                android:layout_height="58dp"
                android:layout_marginStart="57dp"
                android:layout_marginTop="113dp"
                android:layout_marginEnd="56dp"
                android:backgroundTint="#EF5555"
                android:text="Delete Account"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>